// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id            String         @id @default(uuid())
  avatar        String
  firstname     String
  lastname      String
  username      String
  email         String
  password      String
  auctionStakes AuctionStake[]
  auctionItems  AuctionItem[]
  messages      Message[]

  @@map("user")
}

model AuctionItem {
  id            String         @id @default(uuid())
  title         String?
  description   String?
  images        String[]
  startPrice    BigInt         @map("start_price")
  createdAt     DateTime       @default(now()) @map("created_at")
  endTime       DateTime       @map("end_time")
  auctionStakes AuctionStake[]
  user          User           @relation(fields: [userId], references: [id])
  userId        String         @map("user_id")
  chat          Chat?

  @@map("auction_item")
}

model AuctionStake {
  id            String      @id @default(uuid())
  user          User        @relation(fields: [userId], references: [id])
  userId        String
  createdAt     DateTime    @default(now()) @map("created_at")
  auctionItem   AuctionItem @relation(fields: [auctionItemId], references: [id])
  auctionItemId String      @map("auction_item_id")
  price         BigInt

  @@map("auction_stake")
}

model Chat {
  id            String      @id @default(uuid())
  auctionItem   AuctionItem @relation(fields: [auctionItemId], references: [id])
  auctionItemId String      @unique @map("auction_item_id")
  messages      Message[]

  @@map("chat")
}

model Message {
  id        String   @id @default(uuid())
  text      String
  user      User     @relation(fields: [userId], references: [id])
  userId    String   @map("user_id")
  createdAt DateTime @default(now()) @map("created_at")
  chat      Chat?    @relation(fields: [chatId], references: [id])
  chatId    String?  @map("chat_id")

  @@map("message")
}
